<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoLoadingDialogRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/infoLoadingCancelIconGifImv"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/cancel_cross_gif_icon"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/infoLoadingDialogGifImv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/loader_round_green_smile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoLoadingCancelIconGifImv" />

    <TextView
        android:id="@+id/infoLoadingDialogTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:maxLines="5"
        android:padding="@dimen/_2sdp"
        android:scrollbarSize="@dimen/_1sdp"
        android:scrollbars="vertical"
        android:text="loading..."
        android:textColor="#00B0FF"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoLoadingDialogGifImv" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoLoadingDialogTv" />

</androidx.constraintlayout.widget.ConstraintLayout>